<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartcity.iot4.ChartsFragment">

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/recycler_charts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:scrollbars="vertical" />

    <Spinner
        android:id="@+id/charts_spinner"
        style="@style/spinner_style" />

    <com.github.mikephil.charting.charts.LineChart
       android:id="@+id/linechart_sample"
       android:layout_width="match_parent"
       android:layout_height="400dp"> </com.github.mikephil.charting.charts.LineChart>

</LinearLayout>
